{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		"group:recommended"
	],

	"labels": [ "dependencies" ],

	"semanticCommits": "enabled",
	"semanticCommitScope": "",
	"semanticCommitType": "chore",

	"postUpdateOptions": [
		"gomodTidy"
	],

	"packageRules": [
		{
			"matchUpdateTypes": [ "major", "minor" ],
			"semanticCommitType": "feat"
		},
		{
			"matchUpdateTypes": [ "patch" ],
			"semanticCommitType": "fix"
		}
	]
}
